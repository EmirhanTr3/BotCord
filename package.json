{
  "name": "botcord",
  "version": "0.1.0-dev",
  "description": "A discord bot client",
  "main": "out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmirhanTr3/botcord.git"
  },
  "author": {
    "name": "EmirhanTr3",
    "email": "emir@emirdev.xyz"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/EmirhanTr3/botcord/issues"
  },
  "homepage": "https://github.com/EmirhanTr3/botcord#readme",
  "dependencies": {
    "@tanstack/react-router": "^1.31.20",
    "discord-markdown-parser": "^1.1.0",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.15.3",
    "dompurify": "^3.0.9",
    "i18next": "^23.12.2",
    "i18next-icu": "^2.3.0",
    "intl-messageformat": "^10.5.11",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.0",
    "react-portal": "^4.2.2",
    "react-twemoji": "^0.5.0",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@tanstack/router-devtools": "^1.31.20",
    "@tanstack/router-vite-plugin": "^1.31.18",
    "@types/discord-rpc": "^4.0.8",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/react-portal": "^4.0.7",
    "@types/react-twemoji": "^0.4.3",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.4",
    "electron-builder": "^24.13.1",
    "electron-vite": "^2.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "build": {
    "appId": "BotCord",
    "productName": "BotCord",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "copyright": "Copyright Â© 2024 @emirdev.xyz",
    "files": [
      "out"
    ],
    "extraFiles": [
      "lang"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg"
      ],
      "icon": "./assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "./assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./assets/icon.ico"
    }
  }
}
